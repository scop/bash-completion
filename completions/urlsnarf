# urlsnarf completion                                      -*- shell-script -*-

_urlsnarf()
{
    local cur prev words cword
    _comp_initialize || return

    case $prev in
        -*i)
            _available_interfaces -a
            return
            ;;
        -*p)
            _filedir pcap
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_usage "$1")' -- "$cur"))
    fi

} &&
    complete -F _urlsnarf urlsnarf

# ex: filetype=sh
