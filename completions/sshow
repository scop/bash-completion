# sshow completion                                         -*- shell-script -*-

_sshow()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -*i)
            _available_interfaces -a
            return
            ;;
        -*p)
            _filedir pcap
            return
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $(compgen -W '$(_parse_usage "$1")' -- "$cur") )
    fi

} &&
complete -F _sshow sshow

# ex: filetype=sh
