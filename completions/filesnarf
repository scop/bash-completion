# filesnarf etc completion                                 -*- shell-script -*-

_snarf()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -i)
            _interfaces
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_usage "$1" )' -- "$cur" ) )
    fi

} &&
complete -F _snarf filesnarf mailsnarf msgsnarf

# ex: ts=4 sw=4 et filetype=sh
