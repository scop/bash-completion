# monodevelop completion                                   -*- shell-script -*-

_monodevelop()
{
    local cur prev words cword split
    _comp_initialize -s || return

    $split && return

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_help "$1" -h)' -- "$cur"))
        [[ ${COMPREPLY-} == *= ]] && compopt -o nospace
    else
        _filedir
    fi
} &&
    complete -F _monodevelop monodevelop

# ex: filetype=sh
