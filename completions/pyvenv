# bash completion for pyvenv                               -*- shell-script -*-

_pyvenv()
{
    local cur prev words cword split
    _init_completion -s || return

    case $prev in
        -h | --help)
            return
            ;;
    esac

    $split && return

    if [[ $cur == -* ]]; then
        _longopt "$1"
        return
    fi

    _filedir -d
} &&
    complete -F _pyvenv pyvenv pyvenv-3.{4..8}

# ex: filetype=sh
