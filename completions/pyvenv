# bash completion for pyvenv                               -*- shell-script -*-

_pyvenv()
{
    local cur prev words cword split comp_args
    _comp_initialize -s -- "$@" || return

    case $prev in
        -h | --help)
            return
            ;;
    esac

    $split && return

    if [[ $cur == -* ]]; then
        _longopt "$@"
        return
    fi

    _filedir -d
} &&
    complete -F _pyvenv pyvenv pyvenv-3.{4..12}

# ex: filetype=sh
