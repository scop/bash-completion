# ssh-copy-id(1) completion                                -*- shell-script -*-

_ssh_copy_id()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -i)
            _filedir pub
            return
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_usage "$1" --help )' -- "$cur" ) )
    else
        _known_hosts_real -a -- "$cur"
    fi
} &&
complete -F _ssh_copy_id ssh-copy-id

# ex: filetype=sh
