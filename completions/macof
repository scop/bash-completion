# macof completion                                         -*- shell-script -*-

_comp_cmd_macof()
{
    local cur prev words cword comp_args
    _comp_initialize -- "$@" || return

    case $prev in
        -i)
            _available_interfaces -a
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_usage "$1")' -- "$cur"))
    fi

} &&
    complete -F _comp_cmd_macof macof

# ex: filetype=sh
