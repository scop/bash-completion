# xrdb(1) completion                                       -*- shell-script -*-

_comp_cmd_xrdb()
{
    local cur prev words cword comp_args
    _comp_initialize -- "$@" || return

    case $prev in
        -backup | -display | -help)
            return
            ;;
        -cpp | -edit)
            _filedir
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_help "$1")' -- "$cur"))
        return
    fi

    _filedir
} &&
    complete -F _comp_cmd_xrdb xrdb

# ex: filetype=sh
