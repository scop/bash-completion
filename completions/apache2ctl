# apache2ctl(1) completion                                 -*- shell-script -*-

_apache2ctl()
{
    local cur prev words cword
    _init_completion || return

    local APWORDS
    APWORDS=$($1 2>&1 >/dev/null | awk 'NR<2 { print $3; exit }' | \
        tr "|" " ")

    COMPREPLY=( $(compgen -W "$APWORDS" -- "$cur") )
} &&
complete -F _apache2ctl apache2ctl

# ex: filetype=sh
