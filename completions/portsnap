# bash completion for Portsnap                             -*- shell-script -*-

[[ $OSTYPE == *freebsd* ]] || return 1

_portsnap()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -d | -p)
            _filedir -d
            return
            ;;
        -l | -f)
            _filedir
            return
            ;;
    esac

    COMPREPLY=($(compgen -W "fetch cron extract update" -- $cur))
} &&
    complete -F _portsnap portsnap

# ex: filetype=sh
