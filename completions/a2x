# a2x(1) completion                                        -*- shell-script -*-

_a2x()
{
    local cur prev words cword split
    _init_completion -s || return

    case $prev in
        --attribute|--asciidoc-opts|--dblatex-opts|--fop-opts|--help|\
        --version|--xsltproc-opts|-!(-*)[ah])
            return
            ;;
        --destination-dir|--icons-dir|-!(-*)D)
            _filedir -d
            return
            ;;
        --doctype|-!(-*)d)
            _xfunc asciidoc _asciidoc_doctype
            return
            ;;
        --stylesheet)
            _filedir css
            return
            ;;
    esac

    $split && return

    if [[ $cur == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_help "$1" --help )' \
            -- "$cur" ) )
        [[ $COMPREPLY == *= ]] && compopt -o nospace
        return
    fi

    _filedir
} &&
complete -F _a2x a2x

# ex: filetype=sh
