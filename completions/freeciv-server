# freeciv-server completion                                -*- shell-script -*-

_civserver()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -f|-g|-l|-r|--file|--log|--gamelog|--read)
            _filedir
            return
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $(compgen -W '$(_parse_help "$1")' -- "$cur") )
    fi

} &&
complete -F _civserver civserver freeciv-server

# ex: filetype=sh
