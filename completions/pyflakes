# pyflakes(1) completion                                   -*- shell-script -*-

_pyflakes()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -h|--help|--version)
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=( $(compgen -W '$(_parse_help "$1")' -- "$cur") )
        return
    fi

    _filedir py
} &&
complete -F _pyflakes pyflakes

# ex: filetype=sh
