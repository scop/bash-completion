# acpi(1) completion                                        -*- shell-script -*-

_acpi()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        --help|--version|-!(-*)[hv])
            return
            ;;
        --directory|-!(-*)d)
            _filedir -d
            return
            ;;
    esac

    COMPREPLY=( $( compgen -W '$( _parse_help "$1" )' -- "$cur" ) )
} &&
complete -F _acpi acpi

# ex: filetype=sh
