# hunspell(1) completion                                   -*- shell-script -*-

_hunspell()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        --help | --version | -vv | -[hPv])
            return
            ;;
        -d)
            local IFS=$' \t\n' reset=$(shopt -p nullglob)
            shopt -s nullglob
            local -a dicts=(/usr/share/hunspell/*.dic
                /usr/local/share/hunspell/*.dic)
            $reset
            if ((${#dicts[@]})); then
                dicts=("${dicts[@]##*/}")
                dicts=("${dicts[@]%.dic}")
                IFS=$'\n'
                COMPREPLY=($(compgen -W '${dicts[@]}' -- "$cur"))
            fi
            return
            ;;
        -i)
            _comp_xfunc iconv charsets
            return
            ;;
        -p)
            _filedir
            return
            ;;
    esac

    if [[ $cur == -* ]]; then
        COMPREPLY=($(compgen -W '$(_parse_help "$1")' -- "$cur"))
        return
    fi

    _filedir
} &&
    complete -F _hunspell hunspell

# ex: filetype=sh
